<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorLightGreen">

    <TextView
        android:id="@+id/customerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome, Customer"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/appleQty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apple Quantity (kg)" />

    <EditText
        android:id="@+id/bananaQty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Banana Quantity (kg)" />

    <EditText
        android:id="@+id/avocadoQty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Avocado Quantity (kg)" />

    <Button
        android:id="@+id/btnSubmitOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Order" />
</LinearLayout>
