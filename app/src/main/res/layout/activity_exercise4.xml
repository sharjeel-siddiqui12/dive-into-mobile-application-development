<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF"
    android:elevation="4dp">

    <!-- Heading for Event Feedback -->
    <TextView
        android:id="@+id/tvEventHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Feedback"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium" /> <!-- Changed font style -->

    <TextView
        android:id="@+id/para"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please give us feedback for the Mid Year 2024 team event"
        android:textSize="15sp"
        android:textStyle="normal"
        android:textColor="#2C3E50"
        android:layout_gravity="left"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Required"
        android:textSize="15sp"
        android:textStyle="normal"
        android:textColor="@color/red"
        android:layout_gravity="left"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium" />
    <!-- First choice RadioGroup -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Choice"
        android:textSize="16sp"
        android:textColor="#34495E"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rgFirstChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbPizzaFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza"
            android:textColor="#34495E"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@drawable/radiobutton_background"
            android:backgroundTint="#D5E5F3"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"/>

        <RadioButton
            android:id="@+id/rbFriedRiceFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fried Rice"
            android:textColor="#34495E"
            android:textSize="14sp"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/radiobutton_background"

            android:backgroundTint="#D5E5F3"
            android:elevation="2dp"/>

        <RadioButton
            android:id="@+id/rbPancakesFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pancakes"
            android:textColor="#34495E"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@drawable/radiobutton_background"

            android:backgroundTint="#D5E5F3"
            android:elevation="2dp"/>
    </RadioGroup>

    <!-- Second choice RadioGroup -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Choice"
        android:textSize="16sp"
        android:textColor="#34495E"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rgSecondChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbPizzaSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza"
            android:textColor="#34495E"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@drawable/radiobutton_background"
            android:backgroundTint="#D5E5F3"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"/>

        <RadioButton
            android:id="@+id/rbFriedRiceSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fried Rice"
            android:textColor="#34495E"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@drawable/radiobutton_background"

            android:backgroundTint="#D5E5F3"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"/>

        <RadioButton
            android:id="@+id/rbPancakesSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pancakes"
            android:textColor="#34495E"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@drawable/radiobutton_background"
            android:backgroundTint="#D5E5F3"
            android:elevation="2dp"/>
    </RadioGroup>

    <!-- Third choice RadioGroup -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Third Choice"
        android:textSize="16sp"
        android:textColor="#34495E"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rgThirdChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbPizzaThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza"
            android:textColor="#34495E"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@drawable/radiobutton_background"

            android:backgroundTint="#D5E5F3"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"/>

        <RadioButton
            android:id="@+id/rbFriedRiceThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fried Rice"
            android:textColor="#34495E"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@drawable/radiobutton_background"

            android:backgroundTint="#D5E5F3"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"/>

        <RadioButton
            android:id="@+id/rbPancakesThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pancakes"
            android:textColor="#34495E"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@drawable/radiobutton_background"

            android:backgroundTint="#D5E5F3"
            android:elevation="2dp"/>
    </RadioGroup>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button_background"
        android:textSize="16sp"
        android:padding="14dp"
        android:elevation="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"/>
</LinearLayout>
